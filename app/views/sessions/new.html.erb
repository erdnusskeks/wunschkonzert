<h1>Login</h1>
<%= form_tag login_path, method: :post do %>
  <%= label_tag :email, "E-Mail-Adresse" %>
  <%= text_field_tag :email %>

  <%= label_tag :password, "Passwort" %>
  <%= text_field_tag :password %>

  <%= submit_tag "Login" %>

<% end %>

<hr />

<p>Sign up <%= link_to "here", new_user_path %>!</p>